{
    android-external-jars="lib/android/ODK.jar"        
	android-external-jars="libs/ouya-sdk.jar"        
    android-so="lib/android/libODK.so"
	android-custom-activity ='com.ODK.ODK'	
}

#Autogenerated section for windows platform support. Deleting these two comment
#lines will cause the extension builder to re-output this section.
deployments
{
    win32-ext-dll="lib/win32/ODK.dll"
}
