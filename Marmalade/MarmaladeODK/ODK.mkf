display_name "Extensions/ODK"

includepath h

files
{
	(h)
	CallbacksFetchGamerUUID.h
	CallbackSingleton.h
	CallbacksRequestProducts.h
	CallbacksRequestPurchase.h
	CallbacksRequestReceipts.h
	Controller.h
	JSON.h
	JsonUtil.h
	JSONValue.h
	ODK.h
	PluginOuya.h
	Product.h
	Receipt.h

	["interface"]
	(interface)
	ODK_interface.cpp
	ODK.defines.txt
}

defines
{
    IW_TRACE_CHANNEL_ODK_VERBOSE=2
}

if {{ not defined IW_MKF_IWCRT}}
    subproject iwutil

#Autogenerated section for android platform support. Deleting these two comment
#lines will cause the extension builder to re-output this section.
